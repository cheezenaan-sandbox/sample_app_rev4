<div class="stats">
<%= link_to following_user_index_path(user) do %>
  <strong id="following" class="stat">
    <%= user.following.count %>
  </strong>
  following
<% end %>
<%= link_to followers_user_index_path(user) do %>
  <strong id="followers" class="stat">
    <%= user.followers.count %>
  </strong>
  followers
<% end %>
</div>
